{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "ts-monorepo-template",
  "type": "module",
  "private": true,
  "scripts": {
    "postinstall": "husky install configs/husky",
    "clean": "turbo run clean",
    "build": "turbo run build",
    "build:relase": "turbo run build:relase",
    "lint": "turbo run lint",
    "fix": "turbo run fix",
    "check": "turbo run check",
    "check:all": "turbo run check:all",
    "test": "turbo run test",
    "test:all": "turbo run test:all",
    "coverage": "turbo run coverage",
    "coverage:all": "turbo run coverage:all",
    "g:clean": "cd $INIT_CWD && yarn run -T rimraf dist coverage .turbo tsconfig.tsbuildinfo node_modules/.vite",
    "g:build": "cd $INIT_CWD && yarn run -T vite build --mode=development",
    "g:build-release": "cd $INIT_CWD && yarn run -T vite build",
    "g:build-watch": "cd $INIT_CWD && yarn run build --watch",
    "g:test": "cd $INIT_CWD && yarn run -T vitest run",
    "g:test-watch": "cd $INIT_CWD && yarn run -T vitest",
    "g:coverage": "yarn g:test --coverage",
    "g:lint": "cd $INIT_CWD && yarn run -T eslint . --report-unused-disable-directives --max-warnings 0",
    "g:fix": "cd $INIT_CWD && yarn g:lint --fix",
    "g:check": "cd $INIT_CWD && yarn run -T tsc --noEmit",
    "g:storybook": "cd $INIT_CWD && yarn run -T storybook dev -p 6006",
    "g:build-storybook": "cd $INIT_CWD && yarn run -T storybook build",
    "g:app-start": "cd $INIT_CWD && yarn run -T vite",
    "g:app-preview": "cd $INIT_CWD && yarn run -T vite preview",
    "g:cli-start": "cd $INIT_CWD && node ./dist/index.mjs"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "configs/*",
      "libs/*"
    ]
  },
  "packageManager": "yarn@3.6.4",
  "devDependencies": {
    "@storybook/addon-essentials": "^7.5.2",
    "@storybook/addon-interactions": "^7.5.2",
    "@storybook/addon-links": "^7.5.2",
    "@storybook/blocks": "^7.5.2",
    "@storybook/react": "^7.5.2",
    "@storybook/react-vite": "^7.5.2",
    "@storybook/testing-library": "^0.2.2",
    "@types/eslint": "^8.44.6",
    "@types/node": "^20.8.10",
    "@types/prop-types": "^15.7.9",
    "@types/react": "^18.2.35",
    "@types/react-dom": "^18.2.14",
    "@types/rimraf": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@vitest/coverage-c8": "^0.33.0",
    "c8": "^8.0.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "eslint-plugin-storybook": "^0.6.15",
    "esprint": "^3.6.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "prop-types": "^15.8.1",
    "rimraf": "^5.0.5",
    "storybook": "^7.5.2",
    "terser": "^5.24.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.6.2"
  }
}
