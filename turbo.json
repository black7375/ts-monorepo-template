{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "build:release": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "__test__/**/*.ts", "__test__/**/*.tsx"]
    },
    "coverage": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "__test__/**/*.ts", "__test__/**/*.tsx"]
    },
    "lint": {
    },
    "fix": {
    },
    "check": {
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "check"]
    }
  }
}
